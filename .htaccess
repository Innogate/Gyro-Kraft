# Set PHP version
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82 .php .php8 .phtml
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Don't rewrite requests to /api
  RewriteCond %{REQUEST_URI} ^/api [NC]
  RewriteRule ^ - [L]

  # Don't rewrite if request is for an existing file or directory
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Check if the index.html file exists
  RewriteCond %{DOCUMENT_ROOT}/web/dist/gyro_kraft/browserindex.html -f

  # Rewrite all other requests to index.html
  RewriteRule . /web/dist/gyro_kraft/browserindex.html [L]

  # If we reach here and the file does not exist, show 404
  RewriteRule ^ - [R=404,L]
</IfModule>

